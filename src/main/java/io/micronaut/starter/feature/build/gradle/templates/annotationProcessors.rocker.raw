@import io.micronaut.starter.feature.Features

@args (
Features features
)

@if (features.language().isJava()) {
    annotationProcessor platform("io.micronaut:micronaut-bom:$micronautVersion")
    annotationProcessor "io.micronaut:micronaut-inject-java"
    annotationProcessor "io.micronaut:micronaut-validation"
} else if (features.language().isKotlin()) {
    kapt platform("io.micronaut:micronaut-bom:$micronautVersion")
    kapt "io.micronaut:micronaut-inject-java"
    kapt "io.micronaut:micronaut-validation"
} else if (features.language().isGroovy()) {
    compileOnly platform("io.micronaut:micronaut-bom:$micronautVersion")
    compileOnly "io.micronaut:micronaut-inject-groovy"
}
@if (features.contains("graal-native-image")) {
    @if (features.language().isJava()) {
    annotationProcessor "io.micronaut:micronaut-graal"
    } else if (features.language().isKotlin()) {
    kapt "io.micronaut:micronaut-graal"
    } else if (features.language().isGroovy()) {
    compileOnly "io.micronaut:micronaut-graal"
    }
}
@if (features.contains("picocli")) {
    @if (features.language().isJava()) {
    annotationProcessor "io.micronaut.configuration:micronaut-picocli"
    } else if (features.language().isKotlin()) {
    kapt "io.micronaut.configuration:micronaut-picocli"
    } else if (features.language().isGroovy()) {
    compileOnly "io.micronaut.configuration:micronaut-picocli"
    }
}