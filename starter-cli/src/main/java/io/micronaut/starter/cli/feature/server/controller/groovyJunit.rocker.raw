@import io.micronaut.starter.application.Project

@args (
Project project
)

@if (project.getPackageName() != null) {
package @project.getPackageName()
}


import io.micronaut.context.ApplicationContext
import io.micronaut.http.HttpStatus
import io.micronaut.http.client.RxHttpClient
import io.micronaut.runtime.server.EmbeddedServer
import io.micronaut.test.annotation.MicronautTest
import org.junit.jupiter.api.Test
import org.junit.jupiter.api.Assertions

import javax.inject.Inject

@@MicronautTest
class @project.getClassName()ControllerTest {

    @@Inject
    EmbeddedServer embeddedServer

    @@Test
    void testIndex() throws Exception {
        RxHttpClient client = embeddedServer.getApplicationContext().createBean(RxHttpClient, embeddedServer.URL)
        Assertions.assertEquals(HttpStatus.OK, client.toBlocking().exchange("/@project.getPropertyName()").status())
        client.close()
    }
}