@import io.micronaut.starter.application.Project

@args (
Project project
)

@if (project.getPackageName() != null) {
package @project.getPackageName()
}

import static org.junit.jupiter.api.Assertions.assertNotNull;
import static org.junit.jupiter.api.Assertions.assertEquals;
import org.junit.jupiter.api.AfterAll;
import org.junit.jupiter.api.BeforeAll;
import org.junit.jupiter.api.Test;

public class BookMicronautRequestHandlerTest {

    private static BookMicronautRequestHandler bookMicronautRequestHandler;

    @@BeforeAll
    public static void setupServer() {
        bookMicronautRequestHandler = new BookMicronautRequestHandler();
    }

    @@AfterAll
    public static void stopServer() {
        if (bookMicronautRequestHandler != null) {
            bookMicronautRequestHandler.getApplicationContext().close();
        }
    }

    @@Test
    public void testHandler() {
        val book = Book()
        book.name = "Building Microservices"
        BookSaved bookSaved = bookMicronautRequestHandler.execute(book);
        assertEquals(bookSaved.getName(),book.getName());
        assertNotNull(bookSaved.getIsbn());
    }
}
